{
	"name": "clipper",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "web content extraction",
	"permissions": [
		"activeTab",
		"contextMenus"
	],
	"browser_action": {
		"default_icon": "bird.png",
		"default_title": "clippe content"
	},
	"background": {
		"scripts": [
			"myscript.js"
		]
		//	  "persistent": false
	},
	"icons": {
		"16": "bird.png"
	},
	"web_accessible_resources": [
		"bootstrap.min.css",
		"background.html"
	]
}